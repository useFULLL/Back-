<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Title Page-->
    <title>MainPage</title>
    <%- include('./partial/head.ejs') %>
</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar2">
            <%- include('./partial/menu-sidebar') %>
        </aside>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <%- include('./partial/header-desktop') %>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
 
                        <!-- <form action"/getdata" method="GET">
                            <button type ="submit"> 데이터 불러오기</button>    
                        </form> -->

            <!-- BREADCRUMB-->
            <section class="au-breadcrumb m-t-75">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="au-breadcrumb-content">
                                    <div class="au-breadcrumb-left">
                                        <span class="au-breadcrumb-span">You are here:</span>
                                        <ul class="list-unstyled list-inline au-breadcrumb__list">
                                            <li class="list-inline-item active">
                                                <a href="#">투자</a>
                                            </li>
                                            <li class="list-inline-item seprate">
                                                <span>/</span>
                                            </li>
                                            <li class="list-inline-item">펀드</li>
                                        </ul>
                                    </div>
                                    <button class="au-btn au-btn-icon au-btn--green">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END BREADCRUMB-->

            <!-- STATISTIC-->

            <section class="p-t-20">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="title-5 m-b-35">게시판</h3>
                            <%if (!admin) {%>
                                 <a href="/board/create">
                                    <button class="au-btn au-btn-icon au-btn--white au-btn--small">
                                        <i class="zmdi zmdi-plus"></i>글쓰기
                                    </button>
                                </a>
                            </a>
                            <%}%>
                        </div>
                    </div>
         
                                
                    <div class="row m-t-30">
                        <div class="col-md-12">
                            <!-- DATA TABLE-->
                            <div class="table-responsive m-b-40">
                            <table class="table table-borderless table-data3">
                            <thead>
                                <tr>
                                        <th>index</th>
                                        <th>제목</th>
                                        <th>작성일</th>
                                        <th>작성자</th>
                                                                
                                </tr>
                            </thead>
                            <tbody>
                                
                                <% for(var i=0;i < boardData.length ;i++) {%>
                                        <tr>
                                            <td>
                                                 <%=i+1 %>
                                             </td>
                                                <td class="process"><button>                                    
                                                    <a href="/board/post?id=<%=boardData[i].boardID%>"><%=boardData[i].title%> </a>
                                                </button>
                                                <td><%=boardData[i].postDate %>
                                                </td>
                                                <td><%=boardData[i].userName %>
                                               </td>
                                                
                                            </tr>
                                           
                                       
                                    <%}%>
                     
                            </tbody>
                            </table>
                        </div>
                    </div> 
                </div>              
            </section>
        </div>
           
    </div>  
    <!-- Jquery JS-->
    <%- include('./partial/body-js.ejs') %>

</body>

</html>
<!-- end document-->